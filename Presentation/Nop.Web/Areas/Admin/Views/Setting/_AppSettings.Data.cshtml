@model AppSettingsModel

<div class="card-body">
    <div class="form-group row">
        <div class="col-md-3">
            <nop-label asp-for="DataConfigModel.ConnectionString" />
        </div>
        <div class="col-md-9">
            <nop-editor asp-for="DataConfigModel.ConnectionString" />
            <span asp-validation-for="DataConfigModel.ConnectionString"></span>
        </div>
    </div>
    <div class="form-group row">
        <div class="col-md-3">
            <nop-label asp-for="DataConfigModel.DataProvider" />
        </div>
        <div class="col-md-9">
            <nop-select asp-for="DataConfigModel.DataProvider" asp-items="Model.DataConfigModel.DataProviderTypeValues" />
        </div>
    </div>
    <div class="form-group row">
        <div class="col-md-3">
            <nop-label asp-for="DataConfigModel.SQLCommandTimeout" />
        </div>
        <div class="col-md-9">
            <nop-editor asp-for="DataConfigModel.SQLCommandTimeout" />
            <span asp-validation-for="DataConfigModel.SQLCommandTimeout"></span>
        </div>
    </div>
</div>