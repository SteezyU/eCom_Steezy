@model IList<CategoryModel>
@if (Model.Count > 0)
{
    
        <div class="title">
            <h1>BROWSE CATEGORIES</h1>
            <p class="mb-0">Different categories to choose from</p>
        </div>
        <div class="cat-slider category-grid home-page-category-grid">
            <div class="owl-carousel owl-carousel4 owl-theme">
                @foreach (var item in Model)
                {
                    <div class="item">
                        <a href="@Url.RouteUrl("Category", new { SeName = item.SeName })" class="cat-wrapper category-item">
                            <img alt="@item.PictureModel.AlternateText" src="@item.PictureModel.ImageUrl" title="@item.PictureModel.Title" />
                            <button class="price cat-adjust title"> @item.Name</button>
                        </a>
                    </div>
                }
            </div>
        </div>
    
